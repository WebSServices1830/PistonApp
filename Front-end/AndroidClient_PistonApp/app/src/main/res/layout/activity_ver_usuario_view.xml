<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_fondo"
    tools:context=".UsuarioPck.VerUsuarioView">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView_perfilUsuario"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/textView_nombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Nombre: "
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/textView_fechaNacimientoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:paddingLeft="30dp"
            android:text="Fecha de nacimiento: "/>

        <TextView
            android:id="@+id/textView_bolsilloUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:paddingLeft="30dp"
            android:text="Dinero en bolsillo: $"/>





</LinearLayout>

</ScrollView>