    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bienvenido Admin!"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/accionesPiloto"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            fbutton:buttonColor="@color/color_concrete"
            fbutton:shadowColor="@color/black"
            android:onClick="accionesPiloto"
            android:text="Acciones Piloto"
            android:gravity="center"
            android:layout_margin="10dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            />
        <info.hoang8f.widget.FButton
            android:id="@+id/accionesEscuderia"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            fbutton:buttonColor="@color/color_concrete"
            fbutton:shadowColor="@color/black"
            android:onClick="accionesPiloto"
            android:text="Acciones Escuderia"
            android:gravity="center"
            android:layout_margin="10dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            />
        <info.hoang8f.widget.FButton
            android:id="@+id/accionesAuto"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            fbutton:buttonColor="@color/color_concrete"
            fbutton:shadowColor="@color/black"
            android:onClick="accionesPiloto"
            android:text="Acciones Auto"
            android:gravity="center"
            android:layout_margin="10dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            />

        <info.hoang8f.widget.FButton
            android:id="@+id/button_cargarDatos"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            fbutton:buttonColor="#2d867c"
            fbutton:shadowColor="@color/black"
            android:text="Cargar datos iniciales"
            android:onClick="cargarDatosFragmento"
            android:gravity="center"
            android:layout_margin="10dp"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            />


        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/bg_screen0"
        android:foreground="?attr/selectableItemBackground"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/navigation" />

</android.support.design.widget.CoordinatorLayout>
