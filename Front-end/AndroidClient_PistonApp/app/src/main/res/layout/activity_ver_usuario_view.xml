<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsuarioPck.VerUsuarioView">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView_perfilUsuario"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_nombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre: "
            />

        <TextView
            android:id="@+id/textView_fechaNacimientoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de nacimiento: "/>

        <TextView
            android:id="@+id/textView_bolsilloUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinero en bolsillo: $"/>





</LinearLayout>

</ScrollView>