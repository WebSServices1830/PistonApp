<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EscuderiaPck.ActualizarEscuderiaView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editText_escuderia_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre Escuderia"
                />
            <EditText
                android:id="@+id/editText_escuderia_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_escuderia_nombre"
                android:hint="Ubicación escuderia"
                />
            <EditText
                android:id="@+id/editText_escuderia_nombreJefeEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_escuderia_ubicacion"
                android:hint="Nombre jefe de equipo"
                />
            <EditText
                android:id="@+id/editText_escuderia_nombreJefeTecnico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_escuderia_nombreJefeEquipo"
                android:hint="Nombre jefe técnico"
                />
            <EditText
                android:id="@+id/editText_escuderia_nombreChasis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_escuderia_nombreJefeTecnico"
                android:hint="Nombre de chasis"
                />
            <EditText
                android:id="@+id/editText_escuderia_cantPodios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_escuderia_nombreChasis"
                android:hint="Cantidad podios"
                />
            <EditText
                android:id="@+id/editText_escuderia_cantTitulos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_escuderia_cantPodios"
                android:hint="Cantidad titulos"
                />
            <EditText
                android:id="@+id/refImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText_escuderia_cantTitulos"
                android:hint="Referencia imagen"
                />

            <Button
                android:id="@+id/actEscuderia"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/refImagen"
                android:text="Actualizar Escuderia" />

        </RelativeLayout>


    </ScrollView>



</RelativeLayout>